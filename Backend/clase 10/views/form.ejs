<h1 style="color: green;">Ingrese Nuevo Producto</h1>
<br>

<form action="/products" method="post">

    <div class="form-group row">
      <label for="nombre" class="col-sm-2 col-form-label" style="font-weight: bold;">Nombre</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" autocomplete="off">
      </div>
    </div>

    <div class="form-group row">
      <label for="price" class="col-sm-2 col-form-label" style="font-weight: bold;">Precio</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="price" name="price" autocomplete="off">
      </div>
    </div>

    <div class="form-group row">
        <label for="img" class="col-sm-2 col-form-label" style="font-weight: bold;">URL de imagen</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="img" name="img" autocomplete="off">
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
      </div>

</form>