<h2>Lista de productos</h2>

{{#if listExists}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr> 
                <th>Nombre</th>
                <th>Precio</th>
                <th>Url de img</th>
            </tr>
            {{#each products}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.img}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{/if}}
    {{#unless listExists}} 
        <h3>No hay productos aun</h3>
    {{/unless}} 
